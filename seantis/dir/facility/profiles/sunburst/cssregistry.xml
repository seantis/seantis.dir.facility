<?xml version="1.0"?>
<object name="portal_css" meta_type="Stylesheets Registry">

    <stylesheet
        id="++resource++seantis.dir.facility.css/sunburst/directory.css"
        expression="python: object.restrictedTraverse('@@plone_interface_info').provides('seantis.dir.facility.directory.IFacilityDirectory')"
        media="all" rel="stylesheet" rendering="link"/>

    <stylesheet 
        id="++resource++seantis.dir.facility.css/sunburst/item.css" 
        expression="python: object.portal_type == 'seantis.dir.facility.item' or object.restrictedTraverse('@@plone_interface_info').provides('seantis.dir.facility.item.IFacilityFields')"
        media="all" rel="stylesheet" rendering="link"/>
    
</object>
