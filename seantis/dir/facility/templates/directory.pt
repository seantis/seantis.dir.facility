<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="seantis.dir.facility">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        
        <a tal:attributes="href python: context.absolute_url() + '?reset=true'"><h1 class="documentFirstHeading" tal:content="context/title" /></a>


        <tal:block>
            <div tal:replace="structure provider:seantis.dir.base.directory.viewletmanager"/>
        </tal:block>
        
        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div id="directoryInfo" style="float: left; width: 62%;">
            <div id="directoryResultList">
                <a tal:attributes="href item/absolute_url" tal:repeat="item view/batch">
                    <div class="directoryResult" tal:attributes="id item/id">
                        <h2 tal:content="item/title" />
                        <div class="directoryImage">
                            <tal:block define="image nocall:item/image" condition="nocall:image">
                                <img tal:attributes="src string:${item/absolute_url}/@@download/image/${image/filename}" height="64" width="128"/>
                            </tal:block>
                        </div>
                    
                        <div class="directoryDescription">
                            <div>
                                <p tal:content="item/description"/>
                            </div>
                            <div class="opening-hours">
                                <span i18n:translate="">Opening Hours</span>: <span tal:content="item/opening_hours"></span>
                            </div>
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                </a>
            </div>
        </div>

        <div style="float: left; width: 35%; margin-left: 3%; margin-top:10px;">
            <div tal:replace="structure provider:seantis.reservation.overviewletmanager"/>
        </div>

        <div style="clear: both;"></div>

        <tal:block condition="context/resources" define="compare view/compare_link; monthly_report view/monthly_report_link;">
            <h2 i18n:translate="">Utils</h2>

            <div class="directoryChildrenUtils">
                <ul>
                    <li tal:condition="compare">
                        <a tal:attributes="href compare">
                            <tal:block i18n:translate="">Compare Resources</tal:block>
                        </a>
                    </li>
                    <li tal:condition="monthly_report">
                        <a tal:attributes="href monthly_report">
                            <tal:block i18n:translate="">Monthly Report</tal:block>
                        </a>
                    </li>
                </ul>
            </div>
        </tal:block>

        <div tal:replace="structure provider:plone.belowcontentbody" />

        <tal:block define="batch view/batch">
            <div metal:use-macro="here/batch_macros/macros/navigation" />
        </tal:block>

    </tal:main-macro>
</metal:main>

</body>
</html>