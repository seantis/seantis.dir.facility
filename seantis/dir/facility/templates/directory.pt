<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="seantis.dir.facility">
<body>

<metal:slot fill-slot="style_slot">
  <style media="all" type="text/css">
    .directoryResult {
      border: solid #ddd 1px;
      padding: 20px;
      color: #3e5786;
      margin-bottom: 20px;
    }

    .directoryResult:hover {
      background-color: #ddd;
    }

    .directoryResult h2 {
      padding-top: 0px;
      margin-top: -10px;
      margin-bottom: 10px;
    }

    .directoryImage {
      padding: 0;
      height: 64px;
      width: 128px;

      margin: 0;
      margin-right: 25px;
      float: left;
    }

    .directoryDescription {
      float: left;
      width: 50%;      
    }

    #directorySearchForm {
      padding: 20px;
      border: solid #ddd 1px;
    }

    .directorySearchFormButtons {
      margin-top: 10px;
    }

  </style>
</metal:slot>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <a tal:attributes="href python: context.absolute_url() + '?reset=true'"><h1 class="documentFirstHeading" tal:content="context/title" /></a>
        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <tal:block condition="python: not view.filtered">
          <div tal:replace="structure provider:seantis.dir.base.directory.viewletmanager"/>
        </tal:block>
        <div id="directoryInfo">
            <div id="directoryResultList">
              <a tal:attributes="href item/absolute_url" tal:repeat="item view/batch">
                <div class="directoryResult">
                  <h2 tal:content="item/title" />
                  <div class="directoryImage">
                  <tal:block define="image nocall:item/image" condition="nocall:image">
                    <img tal:attributes="src string:${item/absolute_url}/@@download/image/${image/filename}" height="64" width="128"/>
                  </tal:block>
                  </div>
                  <p class="directoryDescription" tal:content="item/description"/>
                  <div style="clear: both;"></div>
                </div>
              </a>
            </div>
        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />

        <tal:block define="batch view/batch">
            <div metal:use-macro="here/batch_macros/macros/navigation" />
        </tal:block>

    </tal:main-macro>
</metal:main>

</body>
</html>