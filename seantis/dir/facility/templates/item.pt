<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="seantis.dir.facility">
<body>

<metal:slot fill-slot="style_slot">
  <style media="all" type="text/css">

    .directoryImage {
      padding: 0;
      height: 64px;
      width: 128px;

      margin: 0;
      margin-right: 25px;
      float: left;
      margin-top: 10px;
    }

    .directoryDescription {
      float: left;
      width: 50%;    
      margin-top: 10px;
    }

    .directoryChildren {
      padding-top: 20px;
    }

    #directorySearchForm {
      display: none;
    }

    .resourceIcon {
      height: 32px;
      width: 32px;
      background-image: url(
      data:application/text;base64,
      );
      /*temporary icon image (cc) by fatcow.com just for the demo */
      float: left;
    }

    .resourceItem {
      padding: 10px;
    }

    .resourceTitle {
      margin-left: 10px;
      margin-top: 5px;
      float:left;
      font-size: 16px;
    }

    .resourceOccupation {
      margin-left: 20px;
      margin-top: 5px;
      float:left;
      font-size: 16px;
    }

    .resourceItem:hover {
      background-color: #eee;
    }

    .resourceDescription {
      float:left;
      margin-top: 5px;
      margin-left: 25px;
    }

  </style>
</metal:slot>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <a tal:attributes="href python: context.absolute_url() + '?reset=true'"><h1 class="documentFirstHeading" tal:content="context/title" /></a>
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="directoryImage">
        <tal:block define="image nocall:context/image" condition="nocall:image">
          <img tal:attributes="src string:${context/absolute_url}/@@download/image/${image/filename}" height="64" width="128"/>
        </tal:block>
        </div>
        <p tal:content="context/description" class="directoryDescription" />

        <div style="clear: both;"></div>
        <div class="directoryChildren">
          <h2>Ressourcen</h2>

            <a tal:attributes="href resource/absolute_url" tal:condition="view/resources" tal:repeat="resource view/resources">
            <div class="resourceItem" >
              <div class="resourceIcon"></div>
              <div class="resourceTitle" tal:content="resource/title"></div>
              <div class="resourceOccupation">
                <span tal:content="python: int(resource.scheduler.occupation_rate())"></span>
                % occupied
              </div>
              <div class="resourceDescription" tal:content="resource/description"></div>
              <div style="clear:both;"></div>
            </div>
            </a>
        </div>
        <div tal:replace="structure provider:plone.belowcontentbody" />
    </tal:main-macro>
</metal:main>

</body>
</html>