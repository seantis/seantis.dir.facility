<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="seantis.dir.facility">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <a tal:attributes="href python: context.absolute_url() + '?reset=true'"><h1 class="documentFirstHeading" tal:content="context/title" /></a>
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="directoryImage">
        <tal:block define="image nocall:context/image" condition="nocall:image">
          <img tal:attributes="src string:${context/absolute_url}/@@download/image/${image/filename}" height="64" width="128"/>
        </tal:block>
        </div>
        <p tal:content="context/description" class="directoryDescription" />

        <div style="clear: both;"></div>
        <div class="directoryChildren" tal:condition="resources" tal:define="resources context/resources">
          <h2>Ressourcen</h2>
            <a tal:attributes="href resource/absolute_url" tal:repeat="resource resources">
            <div class="resourceItem" >
              <div class="resourceIcon"></div>
              <div class="resourceTitle" tal:content="resource/title"></div>
              <div class="resourceAvailability">
                <span tal:content="python: view.availability(resource)"></span>
                % free
              </div>
              <div class="resourceDescription" tal:content="resource/description"></div>
              <div style="clear:both;"></div>
            </div>
            </a>
            <a tal:attributes="href python: view.compare_link" tal:condition="python: len(resources) > 1"><div class="resourceTitle">Compare</div></a>
        </div>
        <div tal:replace="structure provider:plone.belowcontentbody" />
    </tal:main-macro>
</metal:main>

</body>
</html>