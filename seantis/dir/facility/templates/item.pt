<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="seantis.dir.facility"
      lang="en">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main" tal:define="
        resetlink python: context.absolute_url() + '?reset=true';
    ">

        <div tal:replace="structure provider:plone.abovecontenttitle" />
        
        <a tal:attributes="href resetlink">
            <h1 class="documentFirstHeading" tal:content="context/title" />
        </a>

        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="directoryResult">
            <div class="directoryImage">
                <tal:block condition="nocall:image" define="
                    image nocall: context/image;
                    imageurl string: ${context/absolute_url}/@@download/image/${image/filename} 
                ">
                    <img tal:attributes="src imageurl" height="64" width="128"/>
                </tal:block>
            </div>

            <div class="directoryDescription">
                <div>
                    <p tal:content="context/description"/>
                </div>
                <div class="opening-hours">
                    <span i18n:translate="">Opening Hours:</span> <span tal:content="context/opening_hours"></span>
                </div>
            </div>

            <div style="clear: both;"></div>

            <div class="directoryInfo" tal:condition="python: context.contact or context.infrastructure or context.terms_of_use">
                <div class="contact" tal:condition="context/contact">
                    <h2 i18n:translate="">Contact</h2>
                    <tal:block replace="structure context/contact"></tal:block>
                </div>
                <div class="infrastructure" tal:condition="context/infrastructure">
                    <h2 i18n:translate="">Infrastructure</h2>
                    <tal:block replace="structure context/infrastructure"></tal:block>
                </div>
                <div class="terms-of-use" tal:condition="context/terms_of_use">
                    <h2 i18n:translate="">Terms of Use</h2>
                    <tal:block replace="structure context/terms_of_use"></tal:block>
                </div>
            </div>

            <div style="clear: both;"></div>
        </div>

        <div style="clear: both;"></div>

        <div class="directoryChildren" tal:condition="resources" tal:define="
            resources context/resources;
            compare python: len(resources) > 1 and view.compare_link or None;
            monthly_report python: len(resources) >= 1 and view.monthly_report_link or None;
            ">
            
            <h2 i18n:translate="">Ressources</h2>
            
            <a tal:attributes="href resource/absolute_url" tal:repeat="resource resources">
                <div class="resourceItem" tal:define="
                    title resource/title;
                    description resource/description;
                    availability python: view.availability(resource);
                ">
                    <div class="resourceIcon"></div>
                    <div class="resourceTitle" tal:content="title"></div>
                    <div class="resourceAvailability">
                        <span tal:content="availability"></span>
                        <span i18n:translate="">% free</span>
                    </div>
                    <div class="resourceDescription" tal:content="description"></div>

                    <div style="clear:both;"></div>

                </div>
            </a>

            <h2 i18n:translate="">Utils</h2>

            <div class="directoryChildrenUtils">
                <ul>
                    <li tal:condition="compare">
                        <a tal:attributes="href compare">
                            <tal:block i18n:translate="">Compare Resources</tal:block>
                        </a>
                    </li>
                    <li tal:condition="monthly_report">
                        <a tal:attributes="href monthly_report">
                            <tal:block i18n:translate="">Monthly Report</tal:block>
                        </a>
                    </li>
                </ul>
            </div>

        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />
    
    </tal:main-macro>
</metal:main>

</body>
</html>